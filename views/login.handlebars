<div class="row">
  <div class="col-md-6">
    <h2>Login to Your Corner Fellow Bookwork</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="text" id="email" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>If You're New, Signup Here</h2>

    <form class="form newUser-form">
      <div class="form-group">
        <label for="username">name:</label>
        <input class="form-input" type="text" id="username" />
      </div>
      <div class="form-group">
        <label for="new-email">email:</label>
        <input class="form-input" type="text" id="new-email" />
      </div>
      <div class="form-group">
        <label for="new-pass">password:</label>
        <input class="form-input" type="password" id="new-pass" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Welcome Newcomer</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>